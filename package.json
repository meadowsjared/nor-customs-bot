{
  "name": "nor-customs",
  "version": "2.4.0",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx index.ts",
    "check:db": "bun tsx utils/csvImport.ts missing-from-db",
    "check:csv": "bun tsx utils/csvImport.ts missing-from-csv",
    "check:match": "bun tsx utils/csvImport.ts check-matches",
    "import:csv": "bun tsx utils/csvImport.ts import-csv",
    "csv:help": "bun tsx utils/csvImport.ts --help",
    "start": "bash -c 'nohup bun dev > log.latest 2>&1 & echo $! > .pid'",
    "stop": "bash -c 'if [ -f .pid ]; then kill $(cat .pid) && rm .pid; else pkill -f \"bun dev\"; fi'",
    "status": "bash -c 'if [ -f .pid ] && ps -p $(cat .pid) > /dev/null 2>&1; then echo \"Bot is running (PID: $(cat .pid))\"; else echo \"Bot is not running\"; fi'",
    "logs": "tail -f log.latest",
    "logs:all": "less +F log.latest",
    "restart": "bun stop && sleep 2 && bun start",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "csv-parse": "^6.1.0",
    "discord.js": "^14.23.2",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
